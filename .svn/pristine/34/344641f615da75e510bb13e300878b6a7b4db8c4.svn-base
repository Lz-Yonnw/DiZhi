import request from '@/utils/request'

// 查询板块小类-裁剪方式列表
export function listWay(query) {
  return request({
    url: '/system/way/list',
    method: 'get',
    params: query
  })
}

// 查询板块小类-裁剪方式详细
export function getWay(id) {
  return request({
    url: '/system/way/' + id,
    method: 'get'
  })
}

// 查询板块小类详细列表
export function getWayAsList(query) {
  return request({
    url: '/system/way/asList',
    method: 'get',
    params: query
  })
}

// 新增板块小类-裁剪方式
export function addWay(data) {
  return request({
    url: '/system/way',
    method: 'post',
    data: data
  })
}

// 修改板块小类-裁剪方式
export function updateWay(data) {
  return request({
    url: '/system/way',
    method: 'put',
    data: data
  })
}

// 删除板块小类-裁剪方式
export function delWay(id) {
  return request({
    url: '/system/way/' + id,
    method: 'delete'
  })
}

// 导出板块小类-裁剪方式
export function exportWay(query) {
  return request({
    url: '/system/way/export',
    method: 'get',
    params: query
  })
}
